     
      <div id="new-joke-form">
            <div class="container right-container">
              <form action="/jokes" method="POST">
                <h1>Add A Joke</h1>
                <% if (typeof message !== "undefined"){ %>
                  <div class="error-message"><%= message %></div>
                <% } %>
                <div class="form-group">
                  <label for="newContent">Text</label>
                  <textarea name="newContent" id="new-content" class="form-control" rows=4 placeholder="Text"></textarea>
                </div>
          
                <div class="form-check">
                    <label>Categories</label>
                    <br>
                    <% categories.forEach((category)=>{ %>
                      <input class="form-check-input" name="category" type="checkbox" value="<%= category %>" id="new-<%=category %>">
                      <label class="form-check-label" for="new-<%=category %>">
                        <%= category %>
                      </label>
                    <% }) %>
                </div>
                <br>
                <div class="form-group">
                    <label for="newCategories">Add New Categories</label>
                    <textarea name="newCategories" id="new-categories" class="form-control" placeholder="Separate Categories By A Comma and A Space: One-Liner, Jewish, Yo-mama, etc..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="new-joke-button">Submit</button>
              </form>
            </div>
          </div>
   




