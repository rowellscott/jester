<div id="new-form">
  <div class="container right-container">
    <form>
      <h1>Add A Joke</h1>
      <div class="form-group">
        <label for="new-content">Content</label>
        <textarea name="new-content" id="new-content" class="form-control"></textarea>
      </div>

