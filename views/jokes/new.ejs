      <h5>Categories</h5>
      <div class="form-check">
          <% categories.forEach((category)=>{ %>
            <input class="form-check-input" type="checkbox" value="<%= category %>" id="new-<%=category %>">
            <label class="form-check-label" for="new-<%=category %>">
              <%= category %>
            </label>
          <% }) %>
      </div>
      <br>
      <div class="form-group">
          <label for="new-categories">Add New Categories</label>
          <textarea name="new-categories" id="new-categories" class="form-control" placeholder="Separate By Commas and A Space: One-Liner, Jewish, Yo-mama, etc..."></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

