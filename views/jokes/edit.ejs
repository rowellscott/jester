<div id="new-joke-form">
  <div class="container right-container">
    <form action="/jokes/<%=joke._id%>" method="POST">
      <h1>Edit Joke</h1>
      <% if (typeof message !== "undefined"){ %>
        <div class="error-message"><%= message %></div>
      <% } %>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" id="content" class="form-control" rows=4><%=joke.content%></textarea>
      </div>

      
      <div class="form-check">
          <label>Categories</label>
          <br>
          <% categories.forEach((category)=>{ %>
            <% if (joke.categories.indexOf(category) !== -1) {%>
            <input class="form-check-input" name="editCategory" type="checkbox" value="<%= category %>" id="edit-<%=category %>" checked>
            <label class="form-check-label" for="edit-<%=category %>">
              <%= category %>
            </label>
            <% } else {%>
              <input class="form-check-input" name="editCategory" type="checkbox" value="<%= category %>" id="edit-<%=category %>">
            <label class="form-check-label" for="edit-<%=category %>">
              <%= category %>
            </label>
            <% } %>
          <% }) %>
      </div>
      <br>
      <div class="form-group">
          <label for="newCategories">Add New Categories</label>
          <textarea name="newCategories" id="new-categories" class="form-control" placeholder="Separate By Commas and A Space: One-Liner, Jewish, Yo-mama, etc..."></textarea>
      </div>
      <button type="submit" class="btn btn-primary" id="new-joke-button">Save Changes</button>
      <a href="/jokes/<%= user._id%>" class="btn btn-primary" role="button" aria-pressed="true">Cancel</a>
    </form>
   
  </div>
</div>