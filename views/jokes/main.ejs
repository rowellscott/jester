<div class="container right-container">
    <% jokes.forEach(joke => { %>
        <div class="jumbotron">
            <span class="joke"><%= joke.content %></span>
            <br>
            <br>
            <div class="rating">
            <form action="/ratings/<%= joke._id %>/1" method="POST" id='star-1'>
                <span class="glyphicon glyphicon-star-empty star" aria-hidden="true" data-value='1'></span>
            </form>
            <form action="/ratings/<%= joke._id %>/2" method="POST" id='star-2'>
                <span class="glyphicon glyphicon-star-empty star" aria-hidden="true" data-value='2'></span>
            </form>
            <form action="/ratings/<%= joke._id %>/3" method="POST" id='star-3'>
                <span class="glyphicon glyphicon-star-empty star" aria-hidden="true" data-value='3'></span>
            </form>
            <form action="/ratings/<%= joke._id %>/4" method="POST" id='star-4'>
                <span class="glyphicon glyphicon-star-empty star" aria-hidden="true" data-value='4'></span>
            </form>
            <form action="/ratings/<%= joke._id %>/5" method="POST" id='star-5'>
                <span class="glyphicon glyphicon-star-empty star" aria-hidden="true" data-value='5'></span>
            </form>
            <span class="rating-value">Avg.<%= joke.rating %></span>
         
           <!-- If The Joke Isn't In the User's Favorites List -->
            <% if (user.favorites.indexOf(joke._id) === -1 ){ %>
            <form action="/favorites/<%= user._id %>/<%= joke._id %>" method="POST">
                <button type="submit" class="btn favorite"><i class="em em-laughing"></i></button>
            </form>
            <% } else {%>
            <form action="/favorites/<%= user._id %>/<%= joke._id %>" method="POST">
                <button type="submit" class="btn favorited"><i class="em em-laughing"></i></button>
            </form>
            <% } %>
            <!-- </form> -->
            <button type="button" class="btn btn-default share">Share  <span class="glyphicon glyphicon-share" aria-hidden="true"></span></button>
          </div>
        </div>
    <% }) %>
    
    
</div>