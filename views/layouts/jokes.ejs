<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Jester</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.7/lumen/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- Emojis -->
    <link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">
    
    <!-- jQuery -->
    <script src="http://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="crossorigin="anonymous"></script>
   
     <!-- Axios -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    
    <!-- Local API Handler -->
    <script type="text/javascript" src="javascripts/APIHandler.js"></script>
    <script type="text/javascript" src="javascripts/jokesAPI.js"></script>
  </head>
  <body>
    <div class="main-container">
        <div class="container left-container">
            <!-- Link To List All Jokes -->
            <h5><a id="all-link" href="#">All</a></h5>
            <!-- Search By Rating -->
            <h5><a href="#">Rating</a></h5>
            <!-- Search Bar -->
            <form id="search">
              <label for="search-input" class="search-label">Keyword Search:</label>
              <input id="search-input" type="text" name="search">
              <button class="btn" type="submit" id="search-button">Enter</button>
            </form>
            
            <!-- Categories Dropdown Menu -->
            <div class="dropdown" aria-labelledby="dropdownMenuButton">  
              <a class="dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                Categories
                <span class="caret"></span>
              </a>
              <div class="dropdown-menu categories">
                <ul>
                <% categories.forEach((category)=>{ %>
                  <li>
                  <a class="dropdown-item" id="<%= category %>" href="#"><%= category %></a>
                  </li>
               <% }) %>
                </ul>
              </div>
            </div>
            <br>
            <br>
            <br>
            <h5><a href="/jokes/new">Add A Joke</a></h5>
            <h5><a href="#">MyJokes</a></h5>
            <h5><a href="#">Favorites</a></h5>
            <form action="/logout" method="post">
              <button class="btn btn-link" type="submit">Logout</button>
            </form>
        </div>
      <%- body -%>
    </div>

   
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.bundle.min.js" integrity="sha384-feJI7QwhOS+hwpX2zkaeJQjeiwlhOP+SdQDqhgvvo1DsjtiSQByFdThsxO669S2D" crossorigin="anonymous"></script> -->
  </body>
</html>